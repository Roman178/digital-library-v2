<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20260218-07-create-publication-authors-table" author="codex">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="publication_authors"/>
            </not>
        </preConditions>
        <createTable tableName="publication_authors">
            <column name="publication_id" type="integer">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_publication_authors"
                             referencedTableName="publications"
                             referencedColumnNames="id"
                             foreignKeyName="fk_publication_authors_publications"
                             deleteCascade="true"/>
            </column>
            <column name="author_id" type="integer">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_publication_authors"
                             referencedTableName="authors"
                             referencedColumnNames="id"
                             foreignKeyName="fk_publication_authors_authors"
                             deleteCascade="true"/>
            </column>
            <column name="created_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
