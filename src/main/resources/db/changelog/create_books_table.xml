<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20260218-03-create-books-table" author="codex">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="books"/>
            </not>
        </preConditions>
        <createTable tableName="books">
            <column name="id" type="integer" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_books"/>
            </column>
            <column name="publication_id" type="integer">
                <constraints referencedTableName="publications"
                             referencedColumnNames="id"
                             foreignKeyName="fk_books_publications"
                             deleteCascade="true"/>
            </column>
            <column name="isbn" type="nvarchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_books_isbn"/>
            </column>
            <column name="pages" type="int">
                <constraints nullable="false" checkConstraint="pages > 0"/>
            </column>
            <column name="created_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
